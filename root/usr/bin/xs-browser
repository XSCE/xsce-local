#!/bin/bash
# part of XSCE 
# script to turn on the GUI and the browser at boot
if [ `id -u` -ne 0 ]; then
  echo "please become root to execute this command"
  exit 1
fi
systemctl enable olpc-dm.service
touch /home/olpc/.browser-at-boot
read -p "This command requires a reboot. Use <ctl>C to abort the reboot" ans
reboot
