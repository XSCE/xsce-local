#!/bin/bash
# remove all the proprietary and non generic data
# cp restorebashrc /root/.bashrc
rm -f /root/.ssh/*
rm -f /etc/xsce/uuid
rm -f /.olpc-configured
rm -f /home/olpc/.olpc-configured
rm -f /root/.bash_history /home/olpc/.bash_history
rm -rf /etc/NetworkManager/system-connections/*
rm -f /etc/sysconfig/network-scripts/keys*
ls -1 /etc/sysconfig/network-scripts/ifcfg* |grep -v -eifcfg-lo|xargs rm -f
rm -f /etc/alsa/sound.state
rm -f /etc/ssh/ssh_host_rsa_key{,.pub}
rm -f /etc/sysconfig/network
rm -rf /home/olpc/.sugar /home/olpc/.gconf* /home/olpc/.local.share.telepathy
rm -f /home/olpc/.config/epiphany/cookies.sqlite
rm -f /home/olpc/.config/epiphany/ephy-history.db
rm -rf /home/.devkey.html
rm -f /root/.netrc
rm -rf /root/tools
cd /root

# Turn off services which permit remote access to this machine
systemctl disable openvpn@xscenet
systemctl stop openvpn@xscenet
systemctl disable sshd.service
systemctl stop sshd.service

