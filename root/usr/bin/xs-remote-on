#!/bin/bash
# Turn on services which permit remote access to this machine
systemctl enable openvpn@xscenet
systemctl restart openvpn@xscenet
systemctl enable sshd.service
systemctl start sshd.service
echo -e "\n\nWARNING: Remote Administration is ON to permit remote maintenance and product improvement.  To turn off all remote access to your computer, run "xu -c xs-remote-off" from Terminal.\n\n"
