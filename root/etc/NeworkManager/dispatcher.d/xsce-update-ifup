if="$1"
updown="$2"
if [[ "$updown" = "up" && "$if" == "eth0" ]]; then
  gateway=
  loop=1
  while [[ -z $gateway && $loop < 10 ]]; do
    gateway=`netstat -rn|grep eth0|grep UG|gawk '{print $2}'`
    (( loop++ ))
  done
  if [ ! -z $gateway ]; then
  /usr/bin/systemctl restart openvpn@xscenet.service
  fi
fi
